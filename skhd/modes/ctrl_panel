ctrl_panel < k : ~/.config/zshrc/scripts/vol.zsh +5
ctrl_panel < j : ~/.config/zshrc/scripts/vol.zsh -5

ctrl_panel < shift - k : ~/.config/zshrc/scripts/vol.zsh +100
ctrl_panel < shift - j : ~/.config/zshrc/scripts/vol.zsh -100

ctrl_panel < h : brightness -v $(echo $(brightness -l 2>/dev/null | awk '/brightness/ {print $4}') + 0.1 | bc)
ctrl_panel < l : brightness -v $(echo $(brightness -l 2>/dev/null | awk '/brightness/ {print $4}') - 0.1 | bc)

ctrl_panel < shift - h : brightness -v 1
ctrl_panel < shift - l : brightness -v 0

ctrl_panel < b : blueutil -p toggle 

ctrl_panel < w : ~/.config/zshrc/scripts/wifi.zsh

ctrl_panel < o : if [ "$(ls /tmp | grep "obs-toggle-flag")" ]; then; rm -rf "/tmp/obs-toggle-flag"; else; touch "/tmp/obs-toggle-flag"; fi
ctrl_panel < shift - o : /Users/simonferns/.local/bin/obs-cli virtualcam toggle
ctrl_panel < ctrl - o : /Users/simonferns/.local/bin/obs-cli scene switch 'Front Cam' ; /Users/simonferns/.local/bin/obs-cli item toggle camera-record ; /Users/simonferns/.local/bin/obs-cli item toggle screen-record ; /Users/simonferns/.local/bin/obs-cli scene switch 'Side Cam' ; /Users/simonferns/.local/bin/obs-cli item toggle screen-record-2 ; /Users/simonferns/.local/bin/obs-cli item toggle camera-record-2
